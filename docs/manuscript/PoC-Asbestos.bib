@article{ProZES2020,
  title = {{{ProZES}}: The Methodology and Software Tool for Assessment of Assigned Share of Radiation in Probability of Cancer Occurrence},
  shorttitle = {{{ProZES}}},
  author = {Ulanowski, Alexander and Shemiakina, Elena and G{\"u}thlin, Denise and Becker, Janine and Preston, Dale and Apostoaei, A. Iulian and Hoffman, F. Owen and Jacob, Peter and Kaiser, Jan Christian and Eidem{\"u}ller, Markus},
  year = {2020},
