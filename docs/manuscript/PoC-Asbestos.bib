  urldate = {2024-09-27},
  abstract = {Personalized decision making targets the behavior of a specific individual, while population-based decision making concerns a sub-population resembling that individual. This paper clarifies the distinction between the two and explains why the former leads to more informed decisions. We further show that by combining experimental and observational studies we can obtain valuable information about individual behavior and, consequently, improve decisions over those obtained from experimental studies alone. In particular, we show examples where such a combination discriminates between individuals who can benefit from a treatment and those who cannot -- information that would not be revealed by experimental studies alone. We outline areas where this method could be of benefit to both policy makers and individuals involved.},
  copyright = {http://creativecommons.org/licenses/by/4.0},
  langid = {english}
}

@article{Olsson2017,
  title = {Exposure--{{Response Analyses}} of {{Asbestos}} and {{Lung Cancer Subtypes}} in a {{Pooled Analysis}} of {{Case}}--{{Control Studies}}:},
  shorttitle = {Exposure--{{Response Analyses}} of {{Asbestos}} and {{Lung Cancer Subtypes}} in a {{Pooled Analysis}} of {{Case}}--{{Control Studies}}},
  author = {Olsson, Ann C. and Vermeulen, Roel and Sch{\"u}z, Joachim and Kromhout, Hans and Pesch, Beate and Peters, Susan and Behrens, Thomas and Portengen, L{\"u}tzen and Mirabelli, Dario and Gustavsson, Per and Kendzia, Benjamin and Almansa, Josue and Luzon, Veronique and Vlaanderen, Jelle and St{\"u}cker, Isabelle and Guida, Florence and Consonni, Dario and Caporaso, Neil and Landi, Maria Teresa and Field, John and Br{\"u}ske, Irene and Wichmann, Heinz-Erich and Siemiatycki, Jack and Parent, Marie-Elise and Richiardi, Lorenzo and Merletti, Franco and J{\"o}ckel, Karl-Heinz and Ahrens, Wolfgang and Pohlabeln, Hermann and Plato, Nils and Tard{\'o}n, Adonina and Zaridze, David and McLaughlin, John and Demers, Paul and {Szeszenia-Dabrowska}, Neonila and Lissowska, Jolanta and Rudnai, Peter and Fabianova, Eleonora and Stanescu Dumitru, Rodica and Bencko, Vladimir and Foretova, Lenka and Janout, Vladimir and Boffetta, Paolo and {Bueno-de-Mesquita}, Bas and Forastiere, Francesco and Br{\"u}ning, Thomas and Straif, Kurt},
  year = {2017},
